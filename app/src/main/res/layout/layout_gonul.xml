<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/background_diatitle"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <com.skydoves.powerspinner.PowerSpinnerView
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_meslek"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/text"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/occarea"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14.5sp"
        app:spinner_arrow_gravity="end"
        app:spinner_arrow_padding="8dp"
        app:spinner_divider_color="@color/text"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.4dp"
        app:spinner_item_array="@array/meslek"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/white"
        app:spinner_popup_elevation="14dp" />

    <TextView
        android:layout_marginVertical="20dp"
        android:id="@+id/tv_message"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginVertical="7dp">

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_yes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/anarenk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_button"/>

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_no"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/anarenk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_button"/>
    </LinearLayout>

</LinearLayout>